        async function fetchPrayerTimes(district = 'Sylhet') {
            try {
                const res = await fetch(`https://api.aladhan.com/v1/timingsByCity?city=${district}&country=Bangladesh&method=1`);
                const data = await res.json();
                timings = data.data.timings;
                
                let [fh, fm] = timings.Fajr.split(':').map(Number);
                let sehriStartMin = fh * 60 + fm - 20;
                document.getElementById('sehriStart').innerText = formatTime(`${Math.floor(sehriStartMin/60)}:${sehriStartMin%60}`);
                document.getElementById('sehriEnd').innerText = formatTime(timings.Fajr);
                
                document.getElementById('iftarStart').innerText = formatTime(timings.Maghrib);
                document.getElementById('iftarEnd').innerText = formatTime(timings.Isha);
                
                document.getElementById('prayerFajr').innerText = formatTime(timings.Fajr);
                document.getElementById('prayerDhuhr').innerText = formatTime(timings.Dhuhr);
                document.getElementById('prayerAsr').innerText = formatTime(timings.Asr);
                document.getElementById('prayerMaghrib').innerText = formatTime(timings.Maghrib);
                document.getElementById('prayerIsha').innerText = formatTime(timings.Isha);
                
                document.getElementById('prayerFajr2').innerText = formatTime(timings.Fajr);
                document.getElementById('prayerDhuhr2').innerText = formatTime(timings.Dhuhr);
                document.getElementById('prayerAsr2').innerText = formatTime(timings.Asr);
                document.getElementById('prayerMaghrib2').innerText = formatTime(timings.Maghrib);
                document.getElementById('prayerIsha2').innerText = formatTime(timings.Isha);
                
                let [ih, im] = timings.Isha.split(':').map(Number);
                let tarabiTotal = ih * 60 + im + 20;
                document.getElementById('prayerTarabi').innerText = formatTime(`${Math.floor(tarabiTotal/60)}:${tarabiTotal%60}`);
                document.getElementById('prayerTarabi2').innerText = formatTime(`${Math.floor(tarabiTotal/60)}:${tarabiTotal%60}`);
                
            } catch(e) {
                console.log('API error');
            }
        }
        
        function formatTime(t) {
            let [h, m] = t.split(':').map(Number);
            const ampm = h >= 12 ? 'PM' : 'AM';
            h = h % 12 || 12;
            return `${h}:${m.toString().padStart(2,'0')} ${ampm}`;
        }
        
