        async function loadHadith() {
            try {
                const response = await fetch('https://raw.githubusercontent.com/M41NUL/ramadan-tool/main/data/hadith-ramadan.json');
                const hadiths = await response.json();
                
                const today = new Date().getDate();
                const index = (today - 1) % hadiths.length;
