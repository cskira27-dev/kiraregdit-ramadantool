            let dua = autoDuas.fajr;
            
            if(currentTime >= 4.0 && currentTime < 5.23) {
                dua = autoDuas.sehri;
            }
            else if(currentTime >= 5.23 && currentTime < 6.0) {
                dua = autoDuas.fajr;
            }
            else if(currentTime >= 12.0 && currentTime < 15.5) {
                dua = autoDuas.dhuhr;
            }
            else if(currentTime >= 15.5 && currentTime < 17.92) {
                dua = autoDuas.asr;
            }
            else if(currentTime >= 17.92 && currentTime < 19.25) {
                dua = autoDuas.iftar;
            }
            else if(currentTime >= 19.25 && currentTime < 20.0) {
                dua = autoDuas.isha;
            }
            else if(currentTime >= 20.0 && currentTime < 21.75) {
                dua = autoDuas.tarabi;
            }
            else if(currentTime >= 21.75 && currentTime < 22.5) {
                dua = autoDuas.tarabi_end;
