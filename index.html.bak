        function updateLiveTime() {
            const now = new Date();
            let hours = now.getHours();
            const minutes = now.getMinutes().toString().padStart(2, '0');
            const seconds = now.getSeconds().toString().padStart(2, '0');
            const ampm = hours >= 12 ? 'PM' : 'AM';
            
            hours = hours % 12 || 12;
            
            document.getElementById('liveTime').innerText = `${hours}:${minutes}:${seconds} ${ampm}`;
            
            const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
            const dayName = days[now.getDay()];
            const dateStr = now.toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' }).toUpperCase();
            document.getElementById('currentDate').innerText = `${dateStr}, ${dayName}`;
            
            const mode = document.getElementById('darkModeSelect')?.value || 'auto';
            if(mode === 'auto') {
                const currentHour = now.getHours();
                if(currentHour >= 19 || currentHour < 5) {
                    document.body.classList.add('dark-mode');
                } else {
                    document.body.classList.remove('dark-mode');
                }
            }
            
            updateReminder(now.getHours(), now.getMinutes());
            highlightPrayerTime(now.getHours(), now.getMinutes());
            updateAutoDua(now.getHours(), now.getMinutes());
        }
        setInterval(updateLiveTime, 1000);
        
        // ==================== ‡¶∞‡¶ø‡¶Æ‡¶æ‡¶á‡¶®‡ßç‡¶°‡¶æ‡¶∞ ‡¶Ü‡¶™‡¶°‡ßá‡¶ü ====================
        function updateReminder(hours, minutes) {
            const currentTime = hours + minutes / 60;
            let foundMessage = '‡¶á‡¶¨‡¶æ‡¶¶‡¶§‡ßá‡¶∞ ‡¶∏‡¶Æ‡ßü ‡¶ö‡¶≤‡¶õ‡ßá';
            
            for(let i = 0; i < reminderMessages.length; i++) {
                if(currentTime >= reminderMessages[i].start && currentTime < reminderMessages[i].end) {
                    foundMessage = reminderMessages[i].message;
                    break;
                }
            }
            
            document.getElementById('statusText').innerText = foundMessage;
        }
        
        // ==================== ‡¶®‡¶æ‡¶Æ‡¶æ‡¶ú‡ßá‡¶∞ ‡¶∏‡¶Æ‡ßü ‡¶π‡¶æ‡¶á‡¶≤‡¶æ‡¶á‡¶ü ====================
        function highlightPrayerTime(hours, minutes) {
            const currentTime = hours + minutes / 60;
            
            document.querySelectorAll('.prayer-item').forEach(item => {
                item.classList.remove('active');
            });
            
            if(currentTime >= 5.25 && currentTime < 6.0) {
                document.getElementById('prayerFajrItem')?.classList.add('active');
            }
            else if(currentTime >= 12.0 && currentTime < 15.5) {
                document.getElementById('prayerDhuhrItem')?.classList.add('active');
            }
            else if(currentTime >= 15.5 && currentTime < 17.92) {
                document.getElementById('prayerAsrItem')?.classList.add('active');
            }
            else if(currentTime >= 17.92 && currentTime < 19.25) {
                document.getElementById('prayerMaghribItem')?.classList.add('active');
            }
            else if(currentTime >= 19.25 && currentTime < 20.0) {
                document.getElementById('prayerIshaItem')?.classList.add('active');
            }
            else if(currentTime >= 20.0 && currentTime < 21.75) {
                document.getElementById('prayerTarabiItem')?.classList.add('active');
            }
        }
        
