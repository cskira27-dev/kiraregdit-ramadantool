        // ==================== ‡¶®‡¶æ‡¶∂‡¶ø‡¶¶ ‡¶™‡ßç‡¶≤‡ßá‡¶Ø‡¶º‡¶æ‡¶∞ ‡¶´‡¶æ‡¶Ç‡¶∂‡¶® ====================
        function openNasheedPlayer() {
            document.getElementById('nasheedPlayerModal').classList.add('active');
            updateModalPlaylist();
        }
        
        function closeNasheedPlayer() {
            document.getElementById('nasheedPlayerModal').classList.remove('active');
        }
        
        function loadNasheed(index) {
            const nasheed = nasheedList[index];
            audio.src = `https://raw.githubusercontent.com/M41NUL/ramadan-tool/main/audio/${nasheed.file}`;
            audio.load();
            
            document.getElementById('modalNasheedName').innerText = nasheed.name;
            document.getElementById('modalNasheedArtist').innerText = nasheed.artist;
            document.getElementById('modalDurationTime').innerText = formatTime(nasheed.duration);
            
            updateModalPlaylist();
        }
        
        function playPause() {
            if (isPlaying) {
                audio.pause();
                document.getElementById('modalPlayIcon').className = 'fas fa-play';
            } else {
                audio.play();
                document.getElementById('modalPlayIcon').className = 'fas fa-pause';
            }
            isPlaying = !isPlaying;
            updateModalPlaylist();
        }
        
        function nextNasheed() {
            if (isShuffle) {
                let randomIndex;
                do {
                    randomIndex = Math.floor(Math.random() * nasheedList.length);
                } while (randomIndex === currentNasheed && nasheedList.length > 1);
                currentNasheed = randomIndex;
            } else {
                currentNasheed = (currentNasheed + 1) % nasheedList.length;
            }
            loadNasheed(currentNasheed);
            if (isPlaying) audio.play();
        }
        
        function prevNasheed() {
            if (isShuffle) {
                let randomIndex;
                do {
                    randomIndex = Math.floor(Math.random() * nasheedList.length);
                } while (randomIndex === currentNasheed && nasheedList.length > 1);
                currentNasheed = randomIndex;
            } else {
                currentNasheed = (currentNasheed - 1 + nasheedList.length) % nasheedList.length;
            }
            loadNasheed(currentNasheed);
            if (isPlaying) audio.play();
        }
        
        function shuffleNasheed() {
            isShuffle = !isShuffle;
            document.getElementById('modalShuffleBtn').classList.toggle('text-yellow-500', isShuffle);
        }
        
        function repeatNasheed() {
            isRepeat = !isRepeat;
            audio.loop = isRepeat;
            document.getElementById('modalRepeatBtn').classList.toggle('text-yellow-500', isRepeat);
        }
        
        function updateModalPlaylist() {
            const listContainer = document.getElementById('modalNasheedList');
            if (!listContainer) return;
            
            listContainer.innerHTML = '';
            nasheedList.forEach((nasheed, index) => {
                const isActive = index === currentNasheed;
                listContainer.innerHTML += `
                    <div class="playlist-item ${isActive ? 'active' : ''}" onclick="selectNasheed(${index})">
                        <div class="flex items-center gap-3">
                            <div class="play-icon">
                                <i class="fas ${isActive && isPlaying ? 'fa-pause' : 'fa-play'} text-xs"></i>
                            </div>
                            <div>
                                <p class="text-sm font-medium">${nasheed.name}</p>
                                <p class="text-[10px] opacity-50">${nasheed.artist}</p>
                            </div>
                        </div>
                        <span class="text-xs opacity-50">${formatTime(nasheed.duration)}</span>
                    </div>
                `;
            });
        }
        
        function selectNasheed(index) {
            if (currentNasheed === index) {
                playPause();
            } else {
                currentNasheed = index;
                loadNasheed(currentNasheed);
                audio.play();
                isPlaying = true;
                document.getElementById('modalPlayIcon').className = 'fas fa-pause';
                updateModalPlaylist();
            }
        }
        
        audio.addEventListener('timeupdate', function() {
            const progress = (audio.currentTime / audio.duration) * 100 || 0;
            document.getElementById('modalProgressBar').style.width = progress + '%';
            document.getElementById('modalCurrentTime').innerText = formatTime(audio.currentTime);
        });
        
        audio.addEventListener('ended', function() {
            if (isRepeat) {
                audio.play();
            } else {
                nextNasheed();
            }
        });
        
        document.getElementById('modalVolumeControl').addEventListener('input', function(e) {
            audio.volume = e.target.value;
        });
        
        function formatTime(seconds) {
            if (!seconds) return '0:00';
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return `${mins}:${secs.toString().padStart(2, '0')}`;
        }

